<%#= render "users/shared/links" %>
<div class="agile">
	<div class="signin-form profile">
		<h3>Register</h3>
		
		<div class="login-form">
			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { autocomplete: 'off' }) do |f| %>
				<%= f.error_notification %>
				<%= f.input :email, label: false, required: true,placeholder: "E-mail", autofocus: true, label_html: { class: 'text-center' } %>
				<%= f.input :password, label: false,placeholder: "password", required: true %>
				<%= f.input :password_confirmation, label: false,placeholder: "Confirm Password", required: true %>
				<%= f.submit "Register" %>
			<% end%>
		</div>
		<p><a href="#"> By clicking register, I agree to your terms</a></p>
	</div>
</div>
<%= render "users/shared/links" %>